include includes/data.pug

doctype html
//if lt IE 7
	<html class="no-js lt-ie9 lt-ie8 lt-ie7">
//if IE 7
	<html class="no-js lt-ie9 lt-ie8">
//if IE 8
	<html class="no-js lt-ie9">
html(class="no-js", lang="en")
	head
		//Basic page needs
		meta(charset="utf-8")
		title
		meta(name="description", content="")
		meta(name="author", content="") 
		meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1")
		link(rel="stylesheet", type="text/css", href="http://fonts.googleapis.com/css?family=Old+Standard+TT|Lato|Montserrat")
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
		link(rel="stylesheet", type="text/css", href=datalink + "css/style.css")
	body
		.container
			.contenders
				for contender, index in data
					.contenders__card(class="contenders__card--"+index)
						.contenders__card__detail.contenders__card__detail--namePlate
							p.pp 
								span PP 
								span.ppNum #{contender.pp}
							p.horse
								span #{contender.horse}
						.contenders__card__detail.contenders__card__detail--odds
							p.odds Odds
							p.oddsNum #{contender.odds}
						.contenders__card__detail.contenders__card__detail--bio
							p.bioSubject Jockey
							p.bioContent #{contender.jockey}
							p.bioSubject Owner
							p.bioContent #{contender.owner}
							p.bioSubject Trainer
							p.bioContent #{contender.trainer}
							p.bioSubject Breeding
							p.bioContent
								span Dam: 
								| #{contender.dam}
							p.bioContent
								span Sire: 
								| #{contender.sire}
						.contenders__card__detail.contenders__card__detail--notes
							p Prev. Start: 
								span  #{contender.prevStart}
							p Earnings: 
								span  #{contender.earnings}
			.sliderButton.sliderButton--next 
				i.fa.fa-chevron-right(aria-hidden="true")

		//Javascript
		//- MAKE SURE TO CHECK OUT package.json and look at the uglify script. 
		script(src=datalink + "js/min/jquery-3.0.0.min.js")
		script(src=datalink + "js/app.js")
		//- script(src=datalink + "js/app.min.js")
